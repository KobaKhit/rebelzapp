# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Settings
ENV=production
APP_NAME=Rebelz API
DEBUG=false

# Security - IMPORTANT: Generate a secure secret key!
# Use: openssl rand -hex 32
SECRET_KEY=your_super_secure_secret_key_here_at_least_32_chars_long

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database Configuration
DATABASE_URL=postgresql://rebelz_user:your_secure_password@db:5432/rebelzdb
POSTGRES_DB=rebelzdb
POSTGRES_USER=rebelz_user
POSTGRES_PASSWORD=your_secure_password

# CORS Settings - Replace with your actual domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# AI Integration (Optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4o-mini

# Frontend Configuration
# Replace with your actual domain/IP
VITE_API_BASE_URL=https://your-domain.com

# Security Settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
RATE_LIMIT_CALLS=100   # Max API calls per period
RATE_LIMIT_PERIOD=60   # Period in seconds
ENABLE_DOCS=false      # Set to true only for development

# Redis for production rate limiting (optional but recommended)
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_redis_password